<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
    </head>
    <body>
<%- include('../includes/navigation.ejs') %>
<main>
    <ul class="cart__item-list">
        <% cartProd.forEach(element => {  %>
            <li class="cart__item">
                <h1><%= element.productId.title %></h1>
                        <h2>Quantity: <%= element.quantity %></h2>
            </li>
        <% }) %>
    </ul>
    <div class="centered">
        <h2>Total: INR <%= totalAmount %></h2>
    </div>
    <div class="centered">
        <button id="order-btn" class="btn"> ORDER</button>
        <script src="https://js.stripe.com/v3/"></script>
        <script>
            //Use publishable key here
            var stripe = Stripe('pk_test_51N67MUSDfFonAKaCdPJUZJExaFDTCfqoQMX5d1WAWfXhJOh8IKoWAkJKBSj8PlKfcws7Sj4Gsk3a9Z3khRt3T3OM005lrdArBB');
            var orderBtn = document.getElementById('order-btn');
            orderBtn.addEventListener('click',function(){
                stripe.redirectToCheckout({
                    sessionId: '<%= sessionId %>'
                })
            })
        </script>
    </div>
</main>
<%- include('../includes/end.ejs') %>