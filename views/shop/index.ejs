<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
      <h1>My product</h1>
      <p>List of all products</p>
        <% if (result.length > 0) { %>
       <div class="grid">
            <% for (let product of result) { %>
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title"><%= product.title %></h1>
                    </header>
                    <div class="card__image">
                        <img src="/<%= product.imageUrl %>" alt="<%= product.title %>">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">INR
                            <%= product.price %>
                        </h2>
                        <p class="product__description">
                            <%= product.description %>
                        </p>
                    </div>
                    <div class="card__actions">
                        <!-- Have to use _id here as it is the key in findOne() -->
                            <a href="/products/<%= product._id %>" class="btn">Details</a>
                            <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                    </div>
                </article>
            <% } %>
        </div>
        <%- include('../includes/pagination.ejs', {currentPage: currentPage, previousPage:previousPage, nextPage: nextPage, hasPreviousPage: hasPreviousPage, hasNextPage: hasNextPage, lastPage: lastPage }) %>
        <% } else { %>
            <h1> No products Added </h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>